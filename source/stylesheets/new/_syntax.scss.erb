<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

pre {
    padding: 1.5em;
    overflow: auto;
    background-color: #EAEAEA;
    border-radius: 3px;

    code, code.highlight {
        font-family: Monaco, monospace;
        font-size: 12px;
        line-height: 20px;
        background: none;
        display: block;

        &::before,
        &::after {
            content: '';
        }
    }
}

code {
    padding: 0.2em 0.3em;
    margin: 0;
    background-color: #D9D9D9;
    border-radius: 3px;
    font-size: 13px;

    &::before,
    &::after {
        letter-spacing: -0.2em;
        content: "\00a0"
    }
}
